{
    "env": {
      "amd": true,
      "browser": true,
      "webextensions": true,
      "es6": true,
      "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "globals": {
      "expect": true,
      "global": true,
      "sinon": true
    },
    "rules": {
      "linebreak-style": ["error", "unix"],
      "no-trailing-spaces": "error",
      "no-var": "error",
      "semi": ["error", "always"],
      "indent": ["warn", 2, { "SwitchCase": 1 }],
      "prefer-const": "error",
      "camelcase": "warn",
      "complexity": "error",
      "max-depth": "error",
      "max-params": "error",
      "max-lines-per-function": [ "error", { "skipBlankLines": true, "skipComments": true }],
      "max-lines": "error",
      "max-len": ["warn", { "code": 100 }],
      "quotes": ["off", "double"]
    }
}
