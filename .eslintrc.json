{
    "env": {
        "browser": true,
        "webextensions": true,
        "es6": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [ "error", 2, { "SwitchCase": 1 } ],
        "linebreak-style": [ "error", "unix" ],
        "quotes": [ "off", "double" ],
        "semi": [ "error", "always" ]
    }
}
