{
  "name": "firefox-in-my-pocket",
  "description": "For all those who are missing the old Pocket addon for Firefox, here's an unofficial client for the [Pocket](http://getpocket.com/) webservice. I'm not in any way affiliated to Pocket and only does this for my fellow Firefox users looking for an easy to use Pocket extension for their favorite browser.",
  "main": "src/manifest.json",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.1.2",
    "copy-webpack-plugin": "^4.5.2",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "file-loader": "^1.1.11",
    "istanbul-instrumenter-loader": "^3.0.1",
    "mini-css-extract-plugin": "^0.4.1",
    "mocha": "^5.2.0",
    "node-sass": "^4.9.2",
    "nyc": "^11.9.0",
    "sass-loader": "^7.1.0",
    "sinon": "^6.1.4",
    "style-loader": "^0.21.0",
    "web-ext": "^2.8.0",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "scripts": {
    "clean": "rm -rf build/*",
    "build": "npm run clean && npx webpack",
    "watch": "npm run clean && npx webpack -w",
    "zip-source": "zip -r web-ext-artifacts/source.zip CHANGELOG.md README.md package.json webpack.config.js src/",
    "build-ext": "npm run build && web-ext build --source-dir=build/ --overwrite-dest && npm run zip-source",
    "start": "web-ext run -s build",
    "test": "npx mocha --require babel-core/register ./test/helper.js ./test/**/*.test.js",
    "test-watch": "npx mocha -w --require babel-core/register ./test/helper/js ./test/**/*.test.js",
    "cover": "cross-env NODE_ENV=coverage nyc --reporter=lcov --reporter=text npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/pabuisson/in-my-pocket.git"
  },
  "keywords": [
    "firefox",
    "plugin"
  ],
  "author": "Pierre-Adrien Buisson",
  "license": "Mozilla Public License, version 2.0",
  "homepage": "https://bitbucket.org/pabuisson/in-my-pocket#readme",
  "dependencies": {
    "npm": "^6.3.0"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "instrument": false,
    "sourceMap": false
  }
}
