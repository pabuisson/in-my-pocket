{
  "name": "firefox-in-my-pocket",
  "description": "For all those who are missing the old Pocket addon for Firefox, here's an unofficial client for the [Pocket](http://getpocket.com/) webservice. I'm not in any way affiliated to Pocket and only does this for my fellow Firefox users looking for an easy to use Pocket extension for their favorite browser.",
  "main": "src/manifest.json",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.2.0",
    "copy-webpack-plugin": "^4.5.2",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "file-loader": "^4.0.0",
    "istanbul-instrumenter-loader": "^3.0.1",
    "mini-css-extract-plugin": "^0.4.3",
    "mocha": "^5.2.0",
    "node-sass": "^4.12.0",
    "nyc": "^13.3.0",
    "sass-loader": "^7.1.0",
    "sinon": "^6.3.5",
    "style-loader": "^0.23.1",
    "webpack": "^4.33.0",
    "webpack-cli": "^3.3.3",
    "webpack-node-externals": "^1.7.2"
  },
  "scripts": {
    "clean": "rm -rf build/firefox/* && rm -rf build/chrome/*",
    "build": "npm run clean && npx webpack",
    "watch": "npm run clean && npx webpack -w",
    "package": "npm run build && npm run package-ff && npm run package-chrome && npm run zip-source",
    "package-ff": "cd ./build && zip -r -FS ../web-ext-artifacts/in_my_pocket-firefox.zip *  --exclude .DS_Store",
    "package-chrome": "cd ./build && zip -r -FS ../web-ext-artifacts/in_my_pocket-chrome.zip * --exclude .DS_Store",
    "zip-source": "zip -r web-ext-artifacts/source.zip CHANGELOG.md README.md LICENSE package.json webpack.config.js src/ --exclude .DS_Store",
    "test": "npx mocha --require babel-core/register ./test/helper.js ./test/**/*.test.js",
    "test-watch": "npx mocha -w --require babel-core/register ./test/helper/js ./test/**/*.test.js",
    "cover": "cross-env NODE_ENV=coverage nyc --reporter=lcov --reporter=text npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/pabuisson/in-my-pocket.git"
  },
  "keywords": [
    "firefox",
    "plugin"
  ],
  "author": "Pierre-Adrien Buisson",
  "license": "MPL-2.0",
  "homepage": "https://bitbucket.org/pabuisson/in-my-pocket#readme",
  "dependencies": {
    "npm": "^6.9.0"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "instrument": false,
    "sourceMap": false
  }
}
