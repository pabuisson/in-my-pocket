{
  "manifest_version": 2,
  "name": "In My Pocket",
  "version": "0.5.3",

  "description": "For all those who are missing the old Firefox Pocket addon, here is an unofficial client for the excellent Pocket service. Goal is to provide a useful, but still lightweight means to access your Pocket account from your browser. Enjoy!",
  "homepage_url": "https://bitbucket.org/pabuisson/in-my-pocket",
  "icons": {
    "48": "assets/icons/inmypocket-48.png",
    "96": "assets/icons/inmypocket-96.png"
  },

  "applications": {
    "gecko": {
      "id": "{cd7e22de-2e34-40f0-aeff-cec824cbccac}",
      "strict_min_version": "45.0"
    }
  },

  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "activeTab",
    "webRequest",
    "<all_urls>"
  ],

  "background": {
    "scripts": [ "./background.js" ]
  },

  "options_ui": {
    "page": "./options/options.html"
  },

  "browser_action": {
    "default_icon": "assets/icons/inmypocket.svg",
    "default_popup": "./popup/popup.html",
    "browser_style": true
  },

  "page_action": {
    "default_icon": "assets/icons/inmypocket-flat-grey.svg",
    "default_title": "Add to pocket"
  }
}
