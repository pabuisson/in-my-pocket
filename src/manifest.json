{
  "manifest_version": 2,
  "name": "In My Pocket",
  "version": "0.9.4",

  "description": "For all those who are missing the old Firefox Pocket addon, here is an unofficial client for the excellent Pocket service. Goal is to provide a useful, but still lightweight means to access your Pocket account from your browser. Enjoy!",
  "homepage_url": "https://bitbucket.org/pabuisson/in-my-pocket",
  "icons": {
    "48": "assets/icons/inmypocket-48.png",
    "96": "assets/icons/inmypocket-96.png"
  },

  "applications": {
    "gecko": {
      "id": "{cd7e22de-2e34-40f0-aeff-cec824cbccac}",
      "strict_min_version": "45.0"
    }
  },

  "permissions": [
    "<all_urls>",
    "activeTab",
    "contextMenus",
    "notifications",
    "storage",
    "tabs",
    "webRequest"
  ],

  "background": {
    "scripts": [
      "./background.js",
      "./upgrade.js",
      "./context_menus_page_actions.js",
      "./keyboard.js"
    ]
  },

  "options_ui": {
    "page": "./options/options.html"
  },

  "browser_action": {
    "default_icon": "assets/icons/inmypocket-flat-grey-dark.svg",
    "theme_icons": [{
      "light": "assets/icons/inmypocket-flat-grey-light.svg",
      "dark": "assets/icons/inmypocket-flat-grey-dark.svg",
      "size": 16
    }, {
      "light": "assets/icons/inmypocket-flat-grey-light.svg",
      "dark": "assets/icons/inmypocket-flat-grey-dark.svg",
      "size": 32
    }],
    "default_popup": "./popup/popup.html",
    "browser_style": true
  },

  "page_action": {
    "default_icon": "assets/icons/inmypocket-flat-grey-dark.svg",
    "default_title": "Add to pocket"
  },

  "commands": {
    "toggle-page-status": {
      "suggested_key": {
        "default": "Alt+W"
      },
      "description": "Send a 'toggle-page-status' event: adds the page to the item list, or archive it if it's already there"
    },
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Q"
      },
      "description": "Open the popup containing pocket items"
    }
  }
}
