{
  "manifest_version": 2,
  "name": "In My Pocket",
  "version": "0.2.0",

  "description": "For all those who are missing the old Firefox Pocket addon, here is an unofficial client for the excellent Pocket service. Enjoy!",
  "homepage_url": "https://bitbucket.org/pabuisson/in-my-pocket",
  "icons": {
    "48": "icons/inmypocket-48.png",
    "96": "icons/inmypocket-96.png"
  },

  "applications": {
    "gecko": {
      "id": "{cd7e22de-2e34-40f0-aeff-cec824cbccac}",
      "strict_min_version": "45.0"
    }
  },

  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "webRequest",
    "<all_urls>"
  ],

  "background": {
    "scripts": [ "build/background.js" ]
  },

  "options_ui": {
    "page": "src/options/options.html"
  },

  "browser_action": {
    "default_icon": "icons/inmypocket.svg",
    "default_popup": "src/popup/list.html",
    "browser_style": false
  }
}
