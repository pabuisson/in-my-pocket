{
  "manifest_version": 2,
  "name": "Firefox Pocket",
  "version": "0.0.1",

  "description": "For all those who are missing the old Firefox Pocket addon, here is an unofficial client for the excellent Pocket service. Enjoy!",
  "homepage_url": "https://bitbucket.org/pabuisson/firefox-pocket",
  "icons": {
    "48": "icons/pocket-48.png"
  },

  "applications": {
    "gecko": {
      "id": "firefox-pocket@mozilla.org",
      "strict_min_version": "45.0"
    }
  },

  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "webRequest",
    "<all_urls>"
  ],

  "background": {
    "scripts": [ "src/background.js" ]
  },

  "browser_action": {
    "default_icon": "icons/pocket-32.png",
    "default_popup": "src/popup/list.html"
  }
}
